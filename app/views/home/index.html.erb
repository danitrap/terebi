<%= render 'carousel' %>

<div class="row">
    <div class="col-md-4">
        <h3>Unwatched episodes <span class="badge"><%= @unseen_episodes.count %></span></h3>
        <div class="unseen">
            <%= render partial: 'episode_table', object: @unseen_episodes, as: :episodes %>
        </div>
    </div>
    <div class="col-md-4">
        <h3>Watched episodes <span class="badge"><%= @seen_count %></span></h3>
        <div class="seen">
            <%= render partial: 'episode_table', object: @seen_episodes, as: :episodes %>
        </div>
    </div>
    <div class="col-md-4">
        <h3>Today's calendar</h3>
        <%= render 'calendar' %>
    </div>
</div>

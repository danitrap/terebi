<div class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <%= poster_link series %>
    <div class="caption">
      <h3><%= series.name %></h3>
      <p><em><%= series.overview && series.overview.truncate(100) %></em></p>
      <p> 
        <%= link_to 'IMDb', "http://www.imdb.com/title/#{series.imdb_id}/", target: "_blank", class: "btn btn-default" %> 
        <%= link_to 'Edit', edit_series_path(series), class: "btn btn-default" %> 
        <%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> 
      </p>
    </div>
  </div>
</div>